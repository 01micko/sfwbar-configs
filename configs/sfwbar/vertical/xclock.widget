layout {

  label {
    style = "time"
    interval = 1000
    #action = "timebar"
    tooltip = Time("%a %b %d")+"\n\nPress to launch\ntime bar"
    css = "* { font: 11pt nunito; font-weight: 900; -GtkWidget-align: 0.5; -GtkWidget-hexpand: true; -GtkWidget-vexpand: true; min-width: 36px; margin-bottom: 10px; padding: 4px; }"
    value = Time("%k:%M")
  }
}
